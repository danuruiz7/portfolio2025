---
import portfolioData from "../data/portfolio.json";
import type { PortfolioData } from "../types/portfolio";
import { Monitor, Server, Box, Layers, Code2, Database, Container, Terminal, Cpu } from "lucide-react";

const { stack } = portfolioData as PortfolioData;

// Helper to get icon for category
const getIcon = (category: string) => {
  if (category.includes("Frontend")) return Monitor;
  if (category.includes("Backend")) return Server;
  if (category.includes("Database")) return Database;
  if (category.includes("DevOps")) return Box;
  return Layers;
};
---

<section class="py-20 reveal-on-scroll">
  <div class="flex flex-col gap-12">
    <div class="flex items-center gap-3 mb-6">
        <div class="p-2.5 rounded-lg bg-indigo-500/10 text-indigo-400 ring-1 ring-indigo-500/20">
            <Cpu className="w-5 h-5" />
        </div>
        <h2 class="text-3xl font-bold text-white">Tech Stack</h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {stack.map((group) => {
        const Icon = getIcon(group.category);
        return (
          <div class="group relative overflow-hidden p-8 rounded-2xl bg-slate-900/50 border border-slate-800 hover:border-indigo-500/50 transition-all duration-300">
            <div class="absolute inset-0 bg-linear-to-br from-indigo-500/5 to-purple-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            
            <div class="relative z-10">
              <div class="inline-flex p-3 rounded-lg bg-indigo-500/10 text-indigo-400 mb-6 group-hover:scale-110 transition-transform duration-300">
                <Icon className="w-6 h-6" />
              </div>
              
              <h3 class="text-xl font-bold text-slate-100 mb-4">{group.category}</h3>
              
              <ul class="space-y-3">
                {group.technologies.map((tech) => (
                  <li class="flex items-center gap-2 text-slate-400">
                    <div class="w-1.5 h-1.5 rounded-full bg-indigo-500/50"></div>
                    {tech}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        )
      })}
    </div>
  </div>
</section>
