---
import { about } from "../data/portfolio.json";
import { User } from "lucide-react";

const { title, description } = about;
---

<section id="about" class="py-20 scroll-mt-20">
  <div class="grid grid-cols-1 md:grid-cols-12 gap-12 items-start">
    <div class="md:col-span-4">
      <div class="sticky top-24 flex items-center gap-3 mb-6">
        <div class="p-2.5 rounded-lg bg-indigo-500/10 text-indigo-400 ring-1 ring-indigo-500/20">
            <User className="w-5 h-5" />
        </div>
        <h2 class="text-3xl font-bold text-white">{title}</h2>
      </div>
    </div>
    <div class="md:col-span-8">
      <div class="prose prose-lg prose-invert text-slate-300 leading-relaxed">
        <p class="text-xl/8">{description}</p>
      </div>
      
      <div class="mt-8 grid grid-cols-3 gap-4 border-t border-slate-800 pt-8">
        <div class="text-center p-4 bg-slate-900/50 rounded-xl border border-slate-800">
          <span class="block text-3xl font-bold text-indigo-400 mb-1">3+</span>
          <span class="text-sm text-slate-400">AÃ±os Exp.</span>
        </div>
        <div class="text-center p-4 bg-slate-900/50 rounded-xl border border-slate-800">
          <span class="block text-3xl font-bold text-indigo-400 mb-1">20+</span>
          <span class="text-sm text-slate-400">Proyectos</span>
        </div>
        <div class="text-center p-4 bg-slate-900/50 rounded-xl border border-slate-800">
          <span class="block text-3xl font-bold text-indigo-400 mb-1">100%</span>
          <span class="text-sm text-slate-400">Clientes Felices</span>
        </div>
      </div>
    </div>
  </div>
</section>
