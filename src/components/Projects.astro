---
import { projects } from "../data/portfolio.json";
import { Github, ExternalLink, ArrowUpRight, FolderOpen } from "lucide-react";
import { Image } from 'astro:assets';

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif,webp}');
if (!projects.every(p => images[`/src/assets/${p.image}`])) {
    const missing = projects.filter(p => !images[`/src/assets/${p.image}`]).map(p => p.image);
    throw new Error(`Missing images in glob: ${missing.join(', ')}`);
}

---

<section id="projects" class="py-20 scroll-mt-20">
  <div class="flex flex-col gap-12">
    <div class="flex items-end justify-between">
        <div class="flex items-center gap-3">
            <div class="p-2.5 rounded-lg bg-indigo-500/10 text-indigo-400 ring-1 ring-indigo-500/20">
                <FolderOpen className="w-5 h-5" />
            </div>
            <h2 class="text-3xl font-bold text-white">Proyectos Destacados</h2>
        </div>
        <a href="#" class="hidden md:flex items-center gap-2 text-indigo-400 hover:text-indigo-300 transition-colors">
            Ver todos <ArrowUpRight className="w-4 h-4" />
        </a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 auto-rows-[400px]">
      {projects.map((project, index) => (
        <article class={`
            group relative flex flex-col justify-end overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 hover:border-indigo-500/50 transition-all duration-500
            ${index === 0 ? 'lg:col-span-1' : ''}
        `}>
          {/* Background Gradient/Image Placeholder */}
          <div class="absolute inset-0 bg-linear-to-t from-slate-950 via-slate-950/50 to-transparent z-10"></div>
          
           {project.image && (
             <div class="absolute inset-0 z-0 transition-transform duration-700 group-hover:scale-105">
                <Image 
                  src={images[`/src/assets/${project.image}`]()} 
                  alt={project.title} 
                  class="w-full h-full object-cover"
                  width={600}
                  height={400}
                />
             </div>
           )}

          <div class="relative z-20 p-8 flex flex-col h-full justify-end">
            <div class="mb-4 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-500">
                <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs font-medium rounded-full bg-indigo-500/10 text-indigo-300 border border-indigo-500/20 backdrop-blur-sm">
                    {tag}
                    </span>
                ))}
                </div>
                
                <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-indigo-300 transition-colors">
                {project.title}
                </h3>
                
                <p class="text-slate-300 line-clamp-2 mb-6 max-w-lg group-hover:text-slate-200 transition-colors">
                {project.description}
                </p>
                
                <div class="flex items-center gap-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500 delay-100">
                    <a 
                        href={project.links.repo} 
                        class="p-2 rounded-lg bg-white/5 hover:bg-white/10 text-white hover:text-indigo-400 transition-colors border border-white/10"
                        title="Ver Repositorio"
                        aria-label={`Ver cÃ³digo fuente de ${project.title}`}
                    >
                        <Github className="w-5 h-5" />
                    </a>
                    <a 
                        href={project.links.demo} 
                        class="px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white font-medium flex items-center gap-2 transition-all shadow-lg shadow-indigo-600/20"
                    >
                        Demo Live <ExternalLink className="w-4 h-4" />
                    </a>
                </div>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
